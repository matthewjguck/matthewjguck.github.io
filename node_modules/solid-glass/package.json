{
  "name": "solid-glass",
  "version": "0.0.2",
  "description": "A lightweight glass effect library for web apps, supporting React and Vue.",
  "homepage": "https://iplanwebsites.github.io/solid-glass/",
  "repository": {
    "type": "git",
    "url": "https://github.com/iplanwebsites/solid-glass"
  },
  "main": "dist/solid-glass.js",
  "module": "dist/solid-glass.esm.js",
  "exports": {
    ".": {
      "import": "./dist/solid-glass.esm.js",
      "require": "./dist/solid-glass.js"
    },
    "./vanilla": {
      "import": "./dist/vanilla.esm.js",
      "require": "./dist/vanilla.js"
    },
    "./react": {
      "import": "./dist/react.esm.js",
      "require": "./dist/react.js"
    },
    "./vue": {
      "import": "./dist/vue.esm.js",
      "require": "./dist/vue.js"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "vite build --mode demo",
    "preview": "vite preview"
  },
  "keywords": [
    "glass",
    "apple ui",
    "liquid glass",
    "iOs",
    "macOS",
    "web",
    "liquid",
    "effect",
    "ui",
    "react",
    "vue",
    "component"
  ],
  "author": "felix_m",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "vite": "^5.2.0",
    "vue": "^3.4.21"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}
