---
import Base from "@/layouts/Base.astro";
import { getEntry } from "astro:content";
import { markdownify } from "@/lib/utils/textConverter";

const engauge = await getEntry("engauge", "-index");
const { title, description, meta_title, image, details, files, content } = engauge.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
<section class="section-sm">
  <div class="container">
    <div class="row mb-8">
      <div class="col-5">
        <h2 class="title mb-5">{title}</h2>
        <h5 class="mb-5">{description}</h3>
        <div class="date mb-3">  
          <h4>Date</h4>
          {details.date}
        </div>
        <div class="type mb-3">  
          <h4>Project Type</h4>
          {details.type}
        </div>
        <div class="location mb-3">  
          <h4>Location</h4>
          {details.location}
        </div>
        <div class="role mb-3">  
          <h4>Role</h4>
          {details.role}
        </div>
      </div>
      <div class="col-7">
        <img
          src={image}
          alt={title}
          style={{ width: '100%', height: 'auto' }}
        />
      </div>
    </div>
    <div class="row mb-8">
      <div class="col-5">
        <h5 set:html={markdownify(content)} class="mb-1 font-primary" />
      </div>
      <div class="col-7">
        <ul>
          <embed
          src="files/CS 278 Final Project.pdf"
          type="application/pdf"
          width="100%"
          height="900px"
        />
        </ul>
      </div>
    </div>

    


  </div>
</section>
</Base>
