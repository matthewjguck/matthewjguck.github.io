---
import Base from "@/layouts/Base.astro";
import { getEntry } from "astro:content";
import { markdownify } from "@/lib/utils/textConverter";

const ontype1 = await getEntry("ontype1", "-index");
const { title, description, meta_title, images, details, files, content } = ontype1.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={images.splash}
>
<section class="section-sm">
  <div class="container">
    <div class="row mb-8">
      <div class="col-5">
        <h2 class="title mb-5">{title}</h2>
        <h5 class="text-h6 lg:text-h5 mb-5">{description}</h5>
        <div class="date mb-3">  
          <h4>Date</h4>
          {details.date}
        </div>
        <div class="type mb-3">  
          <h4>Project Type</h4>
          {details.type}
        </div>
        <div class="location mb-3">  
          <h4>Location</h4>
          {details.location}
        </div>
        <div class="role mb-3">  
          <h4>Role</h4>
          {details.role}
        </div>
      </div>
      <div class="col-7">
        <img
          src={images.splash}
          alt={title}
          style={{ width: '100%', height: 'auto' }}
        />
      </div>
    </div>
    <div class="row mb-8">
      <div class="col-5">
        
        <h6 set:html={markdownify(content)} class="text-h6 lg:text-h5 mb-1" />
    </div>

    

    <div class="flex flex-wrap mb-8">
      <!-- Image Block 1 -->
      <div class="w-full lg:w-1/3 p-2">
        <img src={images.ss1} alt={title} class="zoomable-img w-full h-auto mb-4" />
      </div>
      <div class="w-full lg:w-1/3 p-2">
        <img src={images.ss2} alt={title} class="zoomable-img w-full h-auto mb-4" />
      </div>
      <div class="w-full lg:w-1/3 p-2">
        <img src={images.ss3} alt={title} class="zoomable-img w-full h-auto mb-4" />
      </div>
    </div>
      
      <style>
        .zoomable-img {
        transition: transform 0.3s ease;
        }

        /* Apply zoom effect only on screens larger than 'sm' */
        @media (min-width: 750px) { /* 'sm' breakpoint in Tailwind is 640px */
          .zoomable-img:hover {
            transform: scale(1.2);
          }
        }
        
        .image-gallery {
          display: flex;
          gap: 16px;
        }
      </style>
    </div>
    <!-- Modal Structure -->
  <div id="myModal" class="fixed inset-0 hidden items-center justify-center bg-black bg-opacity-75 z-50" onclick="closeModal()">
    <img id="modalImage" class="max-w-full max-h-full">
  </div>

  
    </div>
  </div>
</section>
</Base>
