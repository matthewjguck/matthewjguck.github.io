    <div class="gallery-scroll flex overflow-x-auto space-x-4 mb-16">
      <!-- Regular images -->
      <div class="flex-shrink-0">
      <img src="/images/Diet Coke.png" alt="Diet Coke" style="height: 700px;">
      </div>
      <div class="flex-shrink-0">
        <img src="/images/Risk.png" alt="Risk" style="height: 700px;">
      </div>
      <div class="flex-shrink-0">
      <img src="/images/Canes.png" alt="Canes" style="height: 700px;">
      </div>
      <div class="flex-shrink-0">
      <img src="/images/Del Frisco.png" alt="Del Frisco's Double Eagle Steakhouse" style="height: 700px;">
      </div>
      <div class="flex-shrink-0">
      <img src="/images/T1D.png" alt="T1D" style="height: 700px;">
      </div>
