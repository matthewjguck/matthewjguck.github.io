      <img src="/images/Life Juice.png" alt="Life Juice" style="height: 700px;">
      </div>
    </div>
  </section>

  <section class="container mx-auto my-16">
    <!-- Gallery Section 2 -->
    <div class="mb-24">
      <h3 class="font-semibold ">Spotify Playlists</h3>
      <p class="text-h5 mb-4">A handful of my Spotify Playlist Covers.</p>
      <div class="gallery-scroll flex overflow-x-auto space-x-4">
        <div class="w-2/3 gallery-item lg:w-1/3 flex-shrink-0">
          <img class="mb-4 rounded-lg" src="/images/Lemon.png" alt="Lemon" >
