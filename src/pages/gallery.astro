  <section class="container mx-auto my-16">
    <!-- Gallery Section 3 -->
    <div class="mb-24">
      <h3 class="font-semibold mb-4">Instagram Spreads</h3>
      <p class="text-h5 mb-4">Highlights from my Instagram.</p>
      <div class="gallery-scroll flex overflow-x-auto space-x-4 mb-16" style="height: 500px;">

        <div class="flex-shrink-0 img-container">
          <img src="/images/Summer.png" alt="Summer2" class="long-image">
        </div>

        <div class="flex-shrink-0 img-container">
          <img src="/images/Bathrooms.png" alt="Bathrooms" class="long-image">
        </div>
       
        <div class="flex-shrink-0 img-container">
          <img src="/images/Italy.png" alt="Italy" class="long-image">
        </div>

        <div class="flex-shrink-0 img-container">
          <img src="/images/Autumn.png" alt="Autumn" class="long-image">
        </div>

        <div class="flex-shrink-0 img-container">
          <img src="/images/Pride.png" alt="Pride" class="long-image">
        </div>
      </div>
    </div>

  </section>

  <style>
    .gallery-scroll {
      scrollbar-width: thin;
      scrollbar-color: #ccc transparent;
      height: fit-content;
    }
    
   
    
    /* Set images to cover the height */
    .long-image {
      height: 100%;
      width: auto; /* Maintain the aspect ratio */
    }


.container {
  position: relative;
  z-index: 1; /* Ensure your content is above the background */
}
    
    </style>
</Base>